
NAME	:=	fdf
SRC		:=	fdf.c c_to_f.c mlx_util.c my_hook.c
CC		:=	gcc

OBJ=$(SRC:.c=.o)

%.o: %.c
	$(CC) -Wall -Wextra -Werror -I./mlx -c $< -o $@

all: $(NAME)

$(NAME):	$(OBJ)
	$(CC) $(OBJ) -L./mlx -lmlx -lft -framework OpenGL -framework AppKit -o $(NAME)

clean:
	rm -f $(NAME) $(OBJ) *~

re: clean all
